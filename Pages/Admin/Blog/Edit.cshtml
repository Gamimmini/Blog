@page
@model Blog_1.Pages.Admin.Blog.EditModel  
@{
}
<hr class="invis">

        <h2 class="text-center mb-5"> Edit Project</h2>

        @if (Model.errorMessage.Length > 0)
        {
            <div class='alert alert-warning alert-dismissible fade show' role="alert">
                <strong> @Model.errorMessage </strong>
            </div>
        }
        else if (Model.successMessage.Length > 0)
        {
            <div class='alert alert-success alert-dismissible fade show' role="alert">
                <strong> @Model.successMessage </strong>
            </div>
        }


        <form method="post" enctype="multipart/form-data">

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">ID</label>
                <div class="col-sm-8">
                    <input readonly class="form-control-plaintext" value="@Model.Blog.Id" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="BlogDto.Name">
                    <span asp-validation-for="BlogDto.Name" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Description</label>
                <div class="col-sm-8">
                    <textarea id="editor" class="form-control" asp-for="BlogDto.Description"></textarea>
                    <span asp-validation-for="BlogDto.Description" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Category</label>
                <div class="col-sm-8">
                    <select class="form-control" asp-for="BlogDto.Category">
                        <option value='Games'>Games</option>
                        <option value='Website'>Website</option>
                    </select>
                </div>
            </div>


            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Author</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="BlogDto.Author">
                    <span asp-validation-for="BlogDto.Author" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Image</label>
                <div class="col-sm-8">
                    <img src="/image/@Model.Blog.ImageFileName" width="150" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Image</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="BlogDto.ImageFile">
                    <span asp-validation-for="BlogDto.ImageFile" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-outline-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-page="/Admin/Blog/Index" role="button"> Cancel</a>
                </div>
            </div>

        </form>
